<odoo>
    <record id="view_account_pnd_wizard_form" model="ir.ui.view">
        <field name="name">account.pnd.wizard.form</field>
        <field name="model">account.pnd.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Thai PND Report">
                <group>
                    <field name="pnd_type"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                </group>
                <footer>
                    <button name="action_generate_pnd" type="object"
                            string="Generate" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pnd_export_wizard" model="ir.actions.act_window">
        <field name="name">Export PND PDF</field>
        <field name="res_model">account.pnd.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
