<odoo>
    <!-- Action for Loan Management -->
    <record id="action_loan_management" model="ir.actions.act_window">
        <field name="name">Loans</field>
        <field name="res_model">loan.management</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_loan_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                Create the first loan record
            </p>
        </field>
    </record>

    <!-- Action for Installments -->
    <record id="action_installment_management" model="ir.actions.act_window">
        <field name="name">Installments</field>
        <field name="res_model">loan.installment</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_installment_tree"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_create">
                Create the first installment record
            </p>
        </field>
    </record>
</odoo>
