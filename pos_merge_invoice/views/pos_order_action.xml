<odoo>
  <!-- Action Window that opens the wizard -->
  <record id="pos_order_merge_action" model="ir.actions.act_window">
    <field name="name">Merge POS Orders</field>
    <field name="res_model">merge.pos.orders.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
    <field name="context">{'default_pos_order_ids': active_ids}</field>
  </record>

  <!-- Attach the action to the Action dropdown of POS orders -->
  <record id="pos_order_merge_action_server" model="ir.values">
    <field name="model">pos.order</field>
    <field name="key2">client_action_multi</field>
    <field name="name">Merge POS Orders</field>
    <field name="value" eval="'ir.actions.act_window,' + str(ref('pos_order_merge_action'))"/>
  </record>
</odoo>
