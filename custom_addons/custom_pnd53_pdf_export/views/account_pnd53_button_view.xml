<odoo>
    <!-- Server Action to export PND53 PDF -->
    <record id="action_export_pnd53_pdf_server" model="ir.actions.server">
        <field name="name">Export PND53 PDF</field>
        <field name="model_id" ref="account.model_account_report"/>
        <field name="state">code</field>
        <field name="code">
report = env['account.report'].search([('name', '=', 'PND53')], limit=1)
if report:
    action = report.action_export_pnd53_pdf()
    if action:
        return action
        </field>
    </record>

    <!-- Menu Item under Accounting -> Reports -->
    <menuitem id="menu_account_pnd53_pdf"
              name="Export PND53 PDF"
              parent="account.menu_finance_reports"
              action="action_export_pnd53_pdf_server"
              sequence="10"/>
</odoo>
