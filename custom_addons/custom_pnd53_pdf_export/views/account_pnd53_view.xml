<odoo>
    <record id="view_account_pnd53_form" model="ir.ui.view">
        <field name="name">account.pnd53.form</field>
        <field name="model">account.report</field>
        <field name="arch" type="xml">
            <form string="PND53">
                <header>
                    <button name="action_export_pnd53_pdf"
                            type="object"
                            string="Export PDF"
                            class="btn-primary"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_pnd53_message_wizard" model="ir.ui.view">
        <field name="name">pnd53.message.wizard.form</field>
        <field name="model">pnd53.message.wizard</field>
        <field name="arch" type="xml">
            <form string="PND53 PDF Links">
                <sheet>
                    <field name="message" readonly="1" widget="html"/>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
