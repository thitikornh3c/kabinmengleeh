<odoo>
    <record id="view_account_pnd53_form" model="ir.ui.view">
        <field name="name">account.pnd53.form</field>
        <field name="model">account.pnd53</field>
        <field name="arch" type="xml">
            <form string="PND53">
                <header>
                    <button name="action_print_pdf"
                            type="object"
                            string="Export PDF"
                            class="btn-primary"/>
                </header>

                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="date"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
