<odoo>
    <record id="view_pnd53_export_wizard_form" model="ir.ui.view">
        <field name="name">pnd53.export.wizard.form</field>
        <field name="model">pnd53.export.wizard</field>
        <field name="arch" type="xml">
            <form string="Export PND">
                <field name="state" invisible="1"/>
                
                <!-- STATE: INPUT (Date Selection - Step 2) -->
                <group>
                    <attribute name="invisible">
                        [('state', '!=', 'input')]
                    </attribute>
                    <p>Select the date range for the PND export:</p>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>

                <!-- STATE: RESULT (Link Display - Step 3) -->
                <group>
                    <attribute name="invisible">
                        [('state', '!=', 'result')]
                    </attribute>
                    <field name="result_message" nolabel="1" widget="html"/>
                </group>

                <footer>
                    <!-- Submit Button (Step 3: Calls API and changes state) -->
                    <button string="Submit" 
                            name="action_confirm_export_pnd53" 
                            type="object" 
                            class="oe_highlight">
                        <attribute name="invisible">
                            [('state', '!=', 'input')]
                        </attribute>
                    </button>
                    
                    <!-- Cancel/Close Button (Step 4) -->
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <!-- 
    Action Window: This record must be defined before the menu item uses it.
    -->
    <record id="action_pnd53_export_wizard" model="ir.actions.act_window">
        <field name="name">Export PND</field>
        <field name="res_model">pnd53.export.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="view_id" ref="view_pnd53_export_wizard_form"/>
    </record>
</odoo>
