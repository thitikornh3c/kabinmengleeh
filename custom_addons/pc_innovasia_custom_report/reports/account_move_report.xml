<odoo>
    <record id="innovasia_invoice_action" model="ir.actions.report">
        <field name="name">Innovasia Customer Invoice</field>
        <field name="model">account.move</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pc_innovasia_custom_report.innovasia_invoice_report</field>
        <field name="report_file">pc_innovasia_custom_report.innovasia_invoice_report</field>
        <field name="print_report_name">'%s_%s_%s_%s_Invoice' % (object.partner_id.ref, object.invoice_date.strftime('%y%m%d'), object.name, (object.partner_id.commercial_company_name if object.partner_id.commercial_company_name else object.partner_id.name))</field>
        <field name="paperformat_id" ref="pc_innovasia_custom_report.paperformat_custom_report"/>
        <field name="binding_model_id" ref="account.model_account_move"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(4, ref('pc_innovasia_custom_report.jp_report_access'))]"/>
    </record>
</odoo>
