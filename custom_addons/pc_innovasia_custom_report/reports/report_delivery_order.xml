<odoo>
    <template id="innovasia_inventory_packing_list">
        <t t-call="pc_innovasia_custom_report.innovasia_report_layout_packing_list">
            <t t-set="doc" t-value="doc.with_context(lang=doc.partner_id.lang)"/>
            <div class="row" style="position:absolute">
                <strong>Shipping Address:</strong><br/>
                <t t-if="doc.company_id.country_code == 'JP' and doc.partner_id.lang == 'ja_JP'">
                    <t t-if="doc.partner_id.zip">
                        <span>
                            <t t-if="doc.partner_id.lang == 'ja_JP'">  
                                <span style="width:20px;display:inline-block">
                                    <p style="margin-bottom: 0px;">〒</p>
                                </span>
                            </t>
                            <span t-field="doc.partner_id.zip" />
                        </span>
                        <br />
                    </t>
                    <span>
                        <span t-field="doc.partner_id.state_id.name" />
                        <span t-field="doc.partner_id.city" />
                        <span t-field="doc.partner_id.street" />
                        <t t-if="doc.partner_id.street2">
                            <span t-field="doc.partner_id.street2" />
                        </t>
                        <br/>
                        <span t-field="doc.partner_id.country_id" />
                        <t t-if="doc.partner_id.company_type == 'person'">
                            <br/>
                            <span t-field="doc.partner_id.display_name" />
                            <t t-if="doc.partner_id.lang == 'ja_JP'">  
                                <span>様</span>
                            </t>
                            <br/>
                        </t>
                        <t t-else="">
                            <br/>
                            <span t-field="doc.partner_id.name" />
                            <t t-if="doc.partner_id.lang == 'ja_JP'">  
                                <span>御中</span>
                            </t>
                            <br/>
                        </t>
                    </span>
                </t>
                <t t-else="">
                    <t t-if="doc.partner_id.company_type == 'person'">
                        <span t-field="doc.partner_id.display_name" />
                        <br/>
                    </t>
                    <t t-else="">
                        <span t-field="doc.partner_id.name" />                        
                        <br/>
                    </t>
                    <span t-field="doc.partner_id.street" /><br/>
                    <t t-if="doc.partner_id.street2">
                        <span t-field="doc.partner_id.street2" />
                        <br/>
                    </t>      
                    <span t-field="doc.partner_id.city" />
                    <span t-field="doc.partner_id.state_id.name" />
                    <span t-field="doc.partner_id.zip" /><br/>
                    <span t-field="doc.partner_id.country_id" />
                </t>      
            </div>   
            <t t-if="doc.company_id.country_code == 'JP'">
                <div class="row"
                    style="position:absolute;margin-left:800px;margin-top:10px;opacity: 0.9">
                    <img t-att-src="image_data_uri(doc.company_id.pc_company_stamp)"
                        style="width:120px;height:120px;" />
                </div>
            </t>
            <div class="row">                
                <div class="col-9"/>
                <div class="mt-4 col-3 text-start">
                    <t t-if="doc.company_id.pc_local_address">
                        <t t-if="doc.company_id.country_id != doc.partner_id.country_id">          
                            <span t-field="doc.company_id.partner_id.name" /><br/>
                            <span t-field="doc.company_id.partner_id.street" /><br/>
                            <t t-if="doc.company_id.partner_id.street2">
                                <span t-field="doc.company_id.partner_id.street2" />
                                <br/>
                            </t>      
                            <span t-field="doc.company_id.partner_id.city" />
                            <span t-field="doc.company_id.partner_id.state_id.name" />
                            <span t-field="doc.company_id.partner_id.zip" /><br/>
                            <span t-field="doc.company_id.partner_id.country_id" />
                        </t>
                        <t t-else="">
                            <span t-field="doc.company_id.pc_local_address" />
                        </t>                 
                    </t>
                    <t t-else="">
                        <span t-field="doc.company_id.partner_id" t-options="{&quot;widget&quot;: &quot;contact&quot;, &quot;fields&quot;: [&quot;address&quot;, &quot;name&quot;], &quot;no_marker&quot;: true}"></span>
                    </t>
                    <span style="display:inline-block">Tax ID</span>
                    <span t-field="doc.company_id.vat" />
                    <br/>
                </div>
            </div>             
            <div class="page">
                <div class="oe_structure"/>

                <h2 class="mt-2">
                    <t t-if="doc.company_id.pc_show_packing_list_as_do">
                        <span style="color: #000000 !important;">Delivery Order #</span>
                    </t>
                    <t t-else="">
                        <span style="color: #000000 !important;">Packing List #</span>    
                    </t>         
                    <span t-field="doc.name" style="color: #000000 !important;">Innov/OUT/00289</span>                    
                </h2>

                <div class="row mt-4 mb-2" id="informations">
                    <div t-if="doc.origin" class="col-auto col-3 mw-100 mb-2" name="informations_reference">
                        <strong>Your Reference:</strong><br/>
                        <p t-field="doc.origin">SO0001</p>
                    </div>
                    <div t-if="doc.sale_id.client_order_ref" class="col-auto col-3 mw-100 mb-2" name="informations_reference">
                        <strong>Customer Reference:</strong><br/>
                        <p t-field="doc.sale_id.client_order_ref">お客様参照</p>
                    </div>
                    <div t-if="doc.state" class="col-auto col-3 mw-100 mb-2" name="div_sched_date">
                        <strong>Shipping Date:</strong><br/>
                        <p t-esc="doc.scheduled_date.strftime('%Y/%m/%d') if doc.scheduled_date else ''" class="m-0"/>
                    </div>
                    <div t-if="doc.carrier_id" class="col-auto col-3 mw-100 mb-2" name="div_carrier">
                        <strong>Carrier:</strong><br/>
                        <p t-field="doc.carrier_id" class="m-0"/>
                    </div>
                    <div t-if="doc.carrier_tracking_ref" class="col-auto col-3 mw-100 mb-2" name="div_carrier_tracking_ref">
                        <strong>Tracking Number:</strong><br/>
                        <p t-field="doc.carrier_tracking_ref" class="m-0"/>
                    </div>                   
                </div>

                <div class="oe_structure"/>
                <table class="table table-sm mt20" name="stock_move_line_table">
                    <t t-set="has_serial_number" t-value="doc.move_line_ids.mapped('lot_id')"/>
                    <thead>
                        <tr>
                            <th class="text-center">Line</th>
                            <th name="th_sml_product"><strong>Product</strong></th>
                            <th name="lot_serial">
                                Lot/Serial Number
                            </th>
                            <th name="th_sml_quantity" class="text-center"><strong>Quantity</strong></th>
                            <t t-if="doc.pc_show_price_on_report">
                                <th name="th_sml_unit_price" class="text-start">Unit Price</th>
                                <th name="th_sml_tax" class="text-start">Taxes</th>
                                <th name="th_sml_subtotal" class="text-start">Amount</th>
                            </t>                            
                        </tr>
                    </thead>
                    <tbody>
                    <!-- This part gets complicated with different use cases (additional use cases in extensions of this report):
                            1. If serial numbers are used and set to print on delivery slip => print lines as is, otherwise group them by overlapping
                                product + description + uom combinations
                            2. If any packages are assigned => split products up by package (or non-package) and then apply use case 1 -->
                        <!-- If has destination packages => create sections of corresponding products -->
                        <t t-set="row_number" t-value="0"/>
                        <t t-set="lines" t-value="doc.move_ids.move_line_ids.filtered(lambda x: x.product_id)"/>                      

                        <tr t-foreach="lines" t-as="move_line">                                
                            <t t-set="row_number" t-value="row_number + 1"/>
                            <t t-if="not move_line">
                                <tr t-foreach="line_ids.move_id" t-as="move">
                                    <td class="text-center"><span t-esc="row_number"/><!-- Display row number here --></td>
                                    <td>
                                        <span t-field="move.description_picking"/>
                                    </td>
                                    <td>
                                    </td>
                                    <td class="text-end w-auto">
                                        <span t-field="move.product_uom_qty">3.00</span>
                                        <span t-field="move.product_uom">units</span>
                                    </td>
                                    <t t-if="doc.pc_show_price_on_report">
                                        <td class="text-end">
                                            <span t-field="move.sale_line_id.price_unit"
                                                t-options="{&quot;precision&quot;: move.sale_line_id.currency_id.decimal_places}"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-esc="' + '.join([tax.name for tax in move.sale_line_id.tax_id])"/>
                                        </td>
                                        <td class="text-end">
                                            <span t-field="move.sale_line_id.price_subtotal"
                                                t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: move_line.move_id.sale_line_id.currency_id}"/>
                                        </td>
                                    </t>
                                </tr>
                            </t>
                            <t t-if="move_line">              
                                <td class="text-center"><span t-esc="row_number"/><!-- Display row number here --></td>
                                <td>
                                    <span t-field="move_line.move_id.description_picking"/>
                                </td>
                                <td><span t-field="move_line.lot_id.name"/>
                                </td>
                                <td class="text-end w-auto">
                                    <span t-field="move_line.quantity">3.00</span>
                                    <span t-field="move_line.product_uom_id">units</span>
                                </td>
                                <t t-if="doc.pc_show_price_on_report">
                                    <td class="text-end">
                                        <span t-field="move_line.move_id.sale_line_id.price_unit"
                                            t-options="{&quot;precision&quot;: move_line.move_id.sale_line_id.currency_id.decimal_places}"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="' + '.join([tax.name for tax in move_line.move_id.sale_line_id.tax_id])"/>
                                    </td>
                                    <td class="text-end">
                                        <span t-esc="int(move_line.move_id.sale_line_id.price_unit * move_line.quantity)"
                                            t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: move_line.move_id.sale_line_id.currency_id}"/>
                                    </td>
                                </t>
                            </t>                        
                        </tr>
                    </tbody>
                </table>
                <style>
                    table {
                        width: 100%;
                        border-collapse: collapse;
                    }
                
                    thead {
                        display: table-header-group;
                    }
                
                    tfoot {
                        display: table-footer-group;
                    }
                </style>
                <t t-if="doc.pc_show_price_on_report">
                    <div class="clearfix" name="so_total_summary">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-6' if report_type != 'html' else 'col-sm-7 col-md-6'} ms-auto">
                                <table class="table table-sm table-borderless">
                                    <!-- Initialize subtotals and taxes -->
                                    <t t-set="subtotal" t-value="0"/>
                                    <t t-set="total_tax" t-value="0"/>
                                    <t t-set="total_with_tax" t-value="0"/>

                                    <!-- Iterate through move lines to calculate each line's tax and subtotal -->
                                    <t t-foreach="doc.move_line_ids" t-as="move_line">
                                        <t t-set="sale_line" t-value="move_line.move_id.sale_line_id"/>
                                        <t t-set="price_subtotal" t-value="sale_line.price_unit * move_line.quantity"/>
                                        <t t-set="subtotal" t-value="subtotal + price_subtotal"/>

                                        <!-- Calculate tax for the line (based on the tax_id) -->
                                        <t t-set="tax_rate" t-value="sum(tax.amount for tax in sale_line.tax_id if tax.amount)"/>
                                        <t t-set="tax_amount" t-value="price_subtotal * (tax_rate / 100)"/>
                                        <t t-set="total_tax" t-value="total_tax + tax_amount"/>
                                        
                                        <!-- Calculate total after tax -->
                                        <t t-set="total_with_tax" t-value="total_with_tax + price_subtotal + tax_amount"/>
                                    </t>

                                    <!-- Display the subtotal -->
                                    <tr style="border-bottom: 1px solid #000;">
                                        <td class="text-start">
                                            <strong>Untaxed Amount</strong>
                                        </td>
                                        <td class="text-end">
                                            <span t-out="subtotal" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.sale_id.currency_id}"/>
                                        </td>
                                    </tr>

                                    <!-- Display the aggregated taxes -->
                                    <tr style="border-bottom: 1px solid #000;">
                                        <td class="text-start"><strong>Taxes</strong></td>
                                        <td class="text-end" t-att-style="'background-color: rgba(0, 0, 0, 0.1)'">
                                            <span t-out="total_tax" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.sale_id.currency_id}"/>
                                        </td>
                                    </tr>

                                    <!-- Display the total after taxes -->
                                    <tr t-att-style="'border-black o_total'">
                                        <td t-att-style="'background-color: rgba(0, 0, 0, 0.1)'">
                                            <span style="font-weight: bold; color: #000000">Total</span></td>
                                         <td class="text-end" t-att-style="'background-color: rgba(0, 0, 0, 0.1)'">
                                            <span t-out="total_with_tax" style="font-weight: bold; color: #000000" t-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: doc.sale_id.currency_id}"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                </t>
                <div class="oe_structure"/>

                <div class="row" style="margin-top:50px;"/>                
                <div class="row" t-if="doc.pc_show_sign_stamp" style="page-break-inside: avoid; page-break-before: auto; page-break-after: avoid;">             
                    <div class="col-6" style="text-align: center;">
                        <div>
                            <span>For and Behalf of:</span><br/>
                            <span t-field="doc.company_id.name"/>
                        </div>
                        <div class="row" t-if="doc.pc_show_sign_stamp and doc.company_id.pc_company_stamp"
                                style="position:absolute;margin-left:250px;margin-top:0px;opacity: 0.9">
                                <img t-att-src="image_data_uri(doc.company_id.pc_company_stamp)"
                                    style="width:120px;height:120px;" />
                        </div>
                        <div>
                            <t t-if="doc.pc_sign_by.pc_user_signature">
                                <p>
                                    <img t-att-src="image_data_uri(doc.pc_sign_by.pc_user_signature)"
                                        style="max-width: 140px; height: 70px;" 
                                        alt="Signature" />
                                </p>
                            </t>
                            <t t-else="">
                                <p style="max-width: 140px; height: 70px;">
                                </p>
                            </t>
                        </div>
                        
                        <ul class="list-unstyled">
                            <li style="font-size: 14px; border-top: 1px solid black;width:270px; display: inline-block; padding-top: 2px;"><strong t-esc="doc.pc_sign_by.name"></strong></li>
                        </ul>
                    </div>
                    <div class="col-6" style="text-align: center;">
                        <div>
                            <span>Receipt Signature &amp; Company Stamp</span><br/>
                            <span style="display: block; padding-top: 20px;"></span>
                        </div>
                        <div>
                            <t t-if="doc.signature">
                                <p>
                                    <img t-att-src="image_data_uri(doc.signature)"
                                        style="max-width: 140px; height: 70px;" 
                                        alt="Signature" />
                                </p>
                            </t>
                            <t t-else="">
                                <p style="max-width: 140px; height: 70px;">
                                </p>
                            </t>
                        </div>
                        
                        <ul class="list-unstyled">
                            <t>
                                <li style="font-size: 14px; border-top: 1px solid black; width:270px; display: inline-block; padding-top: 2px;"><strong t-esc="doc.partner_id.commercial_company_name"></strong></li>
                            </t>
                        </ul>
                    </div>                                        
                </div>
            </div>
        </t>    
        <field name="field_parent" eval="False" />
        <field name="groups_id" eval="[(6, 0, [])]" />
        <field name="inherit_id" eval="False" />
        <field name="key">pc_innovasia_custom_report.innovasia_inventory_packing_list</field>
        <field name="mode">primary</field>
        <field name="model" eval="False" />
        <field name="name">Packing List</field>
        <field name="priority">16</field>
        <field name="type">qweb</field>
    </template>
    <template id="innovasia_packing_list_report">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-set="with_stamp" t-value="1" />
                <t t-call="pc_innovasia_custom_report.innovasia_inventory_packing_list"
                    t-lang="doc.partner_id.lang">
                </t>
            </t>
        </t>
    </template>
    <template id="document_packing_list_tax_totals_template">
        <!--
            Generic template to display tax totals in pdf reports.
            Used by invoices, SO and PO.

            ARGUMENTS:
            - tax_totals: dict in the form generated by account.move's _get_tax_totals.
        -->

        <t t-foreach="doc.sale_id.tax_totals['subtotals']" t-as="subtotal">
            <tr class="border-black o_subtotal">
                <td><span style="font-weight: bold; color: #000000" t-out="subtotal['name']">Untaxed Amount</span></td>

                <td class="text-end">
                    <span t-att-class="oe_subtotal_footer_separator" t-out="subtotal['formatted_amount']">27.00</span>
                </td>
            </tr>

            <t t-set="subtotal_to_show" t-value="subtotal['name']"/>
            <t t-call="account.tax_groups_totals"/>            
        </t>

        
        <tr t-if="'formatted_rounding_amount' in doc.sale_id.tax_totals and doc.sale_id.tax_totals['rounding_amount'] != 0">
            <td>Rounding</td>
            <td class="text-end">
                <span t-out="doc.sale_id.tax_totals['formatted_rounding_amount']">0</span>
            </td>
        </tr>
        
        <!--Total amount with all taxes-->
        <tr class="border-black o_total">
            <td t-att-style="'background-color: rgba(0, 0, 0, 0.1)'">
                <span style="font-weight: bold; color: #000000">Total</span></td>
            <td class="text-end" t-att-style="'background-color: rgba(0, 0, 0, 0.1)'">
                <span style="font-weight: bold; color: #000000" t-out="doc.sale_id.tax_totals['formatted_amount_total']">31.05</span>
            </td>
        </tr>
    </template>    
</odoo>
