<odoo>
    <record id="innovasia_purchase_order_action" model="ir.actions.report">
        <field name="name">Innovasia Purchase Order</field>
        <field name="model">purchase.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pc_innovasia_custom_report.innovasia_purchase_order_report</field>
        <field name="report_file">pc_innovasia_custom_report.innovasia_purchase_order_report</field>
        <field name="print_report_name">'%s_%s_%s_Purchase Order' % (object.partner_id.ref, object.name, (object.partner_id.commercial_company_name if object.partner_id.commercial_company_name else object.partner_id.name))</field>
        <field name="binding_model_id" ref="purchase.model_purchase_order"/>
        <field name="paperformat_id" ref="pc_innovasia_custom_report.paperformat_custom_report"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(4, ref('pc_innovasia_custom_report.jp_report_access'))]"/>
    </record>
</odoo>
