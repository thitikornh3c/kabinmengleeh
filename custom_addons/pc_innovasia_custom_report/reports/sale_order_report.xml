<odoo>
    <record id="innovasia_sale_quotation_action" model="ir.actions.report">
        <field name="name">Innovasia Quotation/Order</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pc_innovasia_custom_report.innovasia_quo_order_report</field>
        <field name="report_file">pc_innovasia_custom_report.innovasia_quo_order_report</field>
        <field name="print_report_name">'%s_%s_%s_Quotation' % (object.date_order.strftime('%y%m%d'), object.name, (object.partner_id.commercial_company_name if object.partner_id.commercial_company_name else object.partner_id.name))</field>
        <field name="paperformat_id" ref="pc_innovasia_custom_report.paperformat_custom_report"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(4, ref('pc_innovasia_custom_report.jp_report_access'))]"/>
    </record>
    <record id="innovasia_sale_proforma_invoice_action" model="ir.actions.report">
        <field name="name">Innovasia Pro-Forma Invoice</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">pc_innovasia_custom_report.innovasia_proforma_invoice_report</field>
        <field name="report_file">pc_innovasia_custom_report.innovasia_proforma_invoice_report</field>
        <field name="print_report_name">'%s_%s_%s_Pro-Forma Invoice' % (object.date_order.strftime('%y%m%d'), object.name, (object.partner_id.commercial_company_name if object.partner_id.commercial_company_name else object.partner_id.name))</field>
        <field name="paperformat_id" ref="pc_innovasia_custom_report.paperformat_custom_report"/>
        <field name="binding_model_id" ref="sale.model_sale_order"/>
        <field name="binding_type">report</field>
        <field name="groups_id" eval="[(4, ref('pc_innovasia_custom_report.jp_report_access'))]"/>
    </record>    
</odoo>
