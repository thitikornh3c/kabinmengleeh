<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="account_move_view_form_inherit_remittance_info" model="ir.ui.view">
        <field name="name">account.move.form.inherit.remittance_info</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='payment_reference']"
                position="after">                
                <field name="pc_show_remittance_info" groups="pc_innovasia_custom_report.jp_report_access"/>
                <field name="pc_show_narration" groups="pc_innovasia_custom_report.jp_report_access"/>
            </xpath>
            <xpath expr="//group[@name='sale_info_group']"
                position="inside">                
                <field name="pc_remittance_info" groups="pc_innovasia_custom_report.jp_report_access"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='quantity']" position="before">
                <field name="pc_suppress_in_report"
                       attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
            </xpath>
            <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='quantity']" position="before">
                <field name="pc_suppress_in_report"
                       attrs="{'invisible': [('move_type', '!=', 'out_invoice')]}"/>
            </xpath>            
        </field>
    </record>
</odoo>
