<odoo>
  <template id="summary_template">
    <t t-call="web.external_layout">
      <div class="page">
        <h2>Sales Summary Report</h2>
        <p>Config names: <t t-esc="config_names"/></p>
        <p>Period: <t t-esc="date_from"/> - <t t-esc="date_to"/></p>

        <h3>Discounts:</h3>
        <p>Number of discounts: <t t-esc="discount_count"/></p>
        <p>Amount of discounts: <t t-esc="('%.2f' % discount_total)"/> ฿</p>

        <h3>Sale List Table</h3>
        <table class="table table-sm table-bordered">
          <thead>
            <tr>
              <th>Product</th>
              <th class="text-end">Price</th>
              <th class="text-end">QTY</th>
              <th class="text-end">Total</th>
            </tr>
          </thead>
          <tbody>
            <tr t-foreach="products" t-as="p">
              <td><t t-esc="p['name']"/></td>
              <td class="text-end"><t t-esc="('%.2f' % p['price'])"/></td>
              <td class="text-end"><t t-esc="('%.2f' % p['qty'])"/></td>
              <td class="text-end"><t t-esc="('%.2f' % p['total'])"/></td>
            </tr>
          </tbody>
        </table>

        <p><strong>Total:</strong> <t t-esc="('%.2f' % total_amount)"/> ฿</p>
        <p>Number of transactions: <t t-esc="total_transactions"/></p>

        <h3>Orders not Invoiced</h3>
        <ul>
          <li t-foreach="not_invoiced" t-as="o"><t t-esc="o"/></li>
          <li t-if="not not_invoiced">- None -</li>
        </ul>
      </div>
    </t>
  </template>
</odoo>