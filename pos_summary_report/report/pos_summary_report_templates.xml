<odoo>
    <template id="summary_template">
        <t t-call="web.basic_layout">
            <t t-set="title">POS Summary Report</t>
            <div class="page">
                <h2>POS Summary Report</h2>
                <p>Date From: <t t-esc="date_from"/> To: <t t-esc="date_to"/></p>

                <table border="1" cellspacing="0" cellpadding="5">
                    <thead>
                        <tr>
                            <th>Product</th>
                            <th>Qty</th>
                            <th>Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="summary.items()" t-as="line">
                            <td><t t-esc="line[0]"/></td>
                            <td><t t-esc="line[1]['qty']"/></td>
                            <td><t t-esc="line[1]['total']"/></td>
                        </tr>
                    </tbody>
                </table>

                <h3>Orders not invoiced:</h3>
                <ul>
                    <li t-foreach="not_invoiced" t-as="order">
                        <t t-esc="order"/>
                    </li>
                </ul>
            </div>
        </t>
    </template>
</odoo>