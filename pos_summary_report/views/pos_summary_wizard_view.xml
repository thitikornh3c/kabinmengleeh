<odoo>
    <record id="view_pos_summary_wizard_form" model="ir.ui.view">
        <field name="name">pos.sales.summary.wizard.form</field>
        <field name="model">pos.summary.wizard</field>
        <field name="arch" type="xml">
            <form string="POS Sales Summary Report">
                <group>
                    <field name="config_ids" widget="many2many_tags"/>
                    <field name="date_from"/>
                    <field name="date_to"/>
                </group>
                <footer>
                    <button string="Print" type="object" name="action_print" class="btn-primary"/>
                    <button string="Cancel" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_pos_sales_summary_wizard" model="ir.actions.act_window">
        <field name="name">POS Sales Summary</field>
        <field name="res_model">pos.summary.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_pos_sales_summary_root"
              name="POS Sales Summary"
              parent="point_of_sale.menu_point_reporting"
              action="action_pos_sales_summary_wizard"
              sequence="60"/>
</odoo>