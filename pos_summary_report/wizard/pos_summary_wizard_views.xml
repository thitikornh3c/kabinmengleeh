<odoo>
<record id="view_pos_summary_wizard_form" model="ir.ui.view">
    <field name="name">pos.summary.wizard.form</field>
    <field name="model">pos.summary.wizard</field>
    <field name="arch" type="xml">
        <form string="POS Summary Report">
            <group>
                <field name="config_ids"/>
                <field name="date_from"/>
                <field name="date_to"/>
            </group>
            <footer>
                <button string="Print Report" type="object" name="action_print" class="btn-primary"/>
                <button string="Cancel" class="btn-secondary" special="cancel"/>
            </footer>
        </form>
    </field>
</record>

<record id="action_pos_summary_wizard" model="ir.actions.act_window">
    <field name="name">POS Summary Report</field>
    <field name="res_model">pos.summary.wizard</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
</record>

<menuitem id="menu_pos_summary_report" 
          name="POS Summary Report" 
          parent="point_of_sale.menu_point_root" 
          action="action_pos_summary_wizard"/>
</odoo>