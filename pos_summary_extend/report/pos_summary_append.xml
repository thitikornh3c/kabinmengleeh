<odoo>
    <data>
        <!-- Inherit the original POS sales detail report -->
        <template id="pos_summary_append_table" inherit_id="point_of_sale.report_saledetails">
            
            <!-- Example: Insert a custom summary table after the sales table -->
            <xpath expr="//div[@id='sales']" position="after">
                <div class="oe_structure"/>
                <h3>Custom Summary</h3>
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th class="text-start">Category</th>
                            <th class="text-start">Product</th>
                            <th class="text-end">Quantity</th>
                            <th class="text-end">Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="products" t-as="category">
                            <td><span t-out="category['name']">Category Name</span></td>
                            <td/>
                            <td class="text-end"><span t-out="category['qty']">0</span></td>
                            <td class="text-end">
                                <span t-out="category['total']">0.00</span>
                                <span t-out="currency['symbol']">$</span>
                            </td>

                            <!-- Product lines -->
                            <tr t-foreach="category['products']" t-as="line">
                                <td/>
                                <td><span t-out="line['product_name']">Product Name</span></td>
                                <td class="text-end"><span t-out="line['quantity']">0</span></td>
                                <td class="text-end">
                                    <span t-out="line['base_amount']">0.00</span>
                                    <span t-out="currency['symbol']">$</span>
                                </td>
                            </tr>
                        </tr>
                        <tr>
                            <td><strong>Total</strong></td>
                            <td/>
                            <td class="text-end"><strong><span t-out="products_info['qty']">0</span></strong></td>
                            <td class="text-end"><strong><span t-out="products_info['total']">0.00</span><span t-out="currency['symbol']">$</span></strong></td>
                        </tr>
                    </tbody>
                </table>
                <div class="oe_structure"/>
            </xpath>

        </template>
    </data>
</odoo>
