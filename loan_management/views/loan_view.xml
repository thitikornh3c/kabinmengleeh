<odoo>
    <record id="view_loan_tree" model="ir.ui.view">
        <field name="name">loan.management.tree</field>
        <field name="model">loan.management</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="employee_id"/>
                <field name="amount"/>
                <field name="date_start"/>
            </tree>
        </field>
    </record>

    <record id="view_loan_form" model="ir.ui.view">
        <field name="name">loan.management.form</field>
        <field name="model">loan.management</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                        <field name="amount"/>
                        <field name="date_start"/>
                    </group>
                    <notebook>
                        <page string="Installments">
                            <field name="installments">
                                <tree editable="bottom">
                                    <field name="name"/>
                                    <field name="installment_amount"/>
                                    <field name="due_date"/>
                                    <field name="paid"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
