<odoo>
    <record id="view_installment_tree" model="ir.ui.view">
        <field name="name">loan.installment.tree</field>
        <field name="model">loan.installment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="installment_amount"/>
                <field name="due_date"/>
                <field name="paid"/>
            </tree>
        </field>
    </record>

    <record id="view_installment_form" model="ir.ui.view">
        <field name="name">loan.installment.form</field>
        <field name="model">loan.installment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="loan_id"/>
                        <field name="installment_amount"/>
                        <field name="due_date"/>
                        <field name="paid"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
